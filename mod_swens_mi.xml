<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
  <name>mod_swens_mi</name>
  <author>SWENS</author>
  <version>1.0.2</version>
  <creationDate>2026-01-02</creationDate>
  <description>SWENS_MI_DESC</description>

  <files>
    <filename module="mod_swens_mi">mod_swens_mi.php</filename>
    <filename>helper.php</filename>
    <folder>tmpl</folder>
    <folder>language</folder>
  </files>

  <config>
    <fields name="params">
      <fieldset name="basic" label="SWENS_MI_FIELDSET_BASIC">
        <field
          name="recipient_email"
          type="email"
          label="SWENS_MI_RECIPIENT_EMAIL"
          description="SWENS_MI_RECIPIENT_EMAIL_DESC"
          required="true"
        />
        <field
          name="subject_prefix"
          type="text"
          label="SWENS_MI_SUBJECT_PREFIX"
          default="SWENS_MI Intake"
        />
        <field
          name="redirect_url"
          type="text"
          label="SWENS_MI_REDIRECT_URL"
          description="SWENS_MI_REDIRECT_URL_DESC"
          default="/thank-you"
        />
        <field
          name="use_captcha"
          type="radio"
          label="SWENS_MI_USE_CAPTCHA"
          default="1"
        >
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field
          name="rate_limit_seconds"
          type="number"
          label="SWENS_MI_RATE_LIMIT"
          default="10"
          min="0"
        />
        <field
          name="send_autoreply"
          type="radio"
          label="SWENS_MI_SEND_AUTOREPLY"
          default="0"
        >
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field
          name="autoreply_body"
          type="textarea"
          label="SWENS_MI_AUTOREPLY_BODY"
          rows="6"
          default="Thanks — we received your intake. We’ll respond within 24 hours with a plan and monthly fee estimate."
          showon="send_autoreply:1"
        />
      </fieldset>
    </fields>
  </config>
</extension>
